{
  "name": "view-php",
  "displayName": "view-php",
  "description": "Syntax support for view.php files",
  "version": "1.0.0",
  "publisher": "manimehalan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mani-hash/view-php.git"
  },
  "bugs": {
    "url": "https://github.com/mani-hash/view-php/issues"
  },
  "homepage": "https://github.com/mani-hash/view-php#readme",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php",
    "workspaceContains:resources/views/components"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "text.viewphp.inject",
        "path": "./syntaxes/viewphp-injection.tmLanguage.json",
        "injectTo": [
          "text.html.php"
        ]
      }
    ],
    "snippets": [
      {
        "language": "php",
        "path": "./snippets/viewphp.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
